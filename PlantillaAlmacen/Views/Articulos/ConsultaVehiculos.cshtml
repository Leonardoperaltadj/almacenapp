@model Paginacion<PlantillaAlmacen.Models.ArticuloVehiculo>

@{
    ViewData["Title"] = "Consulta de Vehículos";
    Layout = "_Layout";
}

<div class="content-header">
    <div class="container-fluid">
        <h1 class="m-0">Consulta de Vehículos</h1>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card card-outline card-primary">
            <div class="card-body">

                <form asp-action="ConsultaVehiculos" method="get" class="form-inline mb-3">
                    <input type="text" name="buscador" value="@ViewData["Buscador"]"
                           class="form-control mr-2 w-50"
                           placeholder="Buscar por marca, modelo, placas, serie, etc...">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                    <a asp-action="ConsultaVehiculos" class="btn btn-outline-secondary ml-2">
                        <i class="fas fa-list"></i> Ver todo
                    </a>
                    <a asp-action="ExportarVehiculos" class="btn btn-success ml-2">
                        <i class="fas fa-file-excel"></i> Exportar Excel
                    </a>
                </form>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-wrap">
                        <thead class="bg-dark text-white">
                            <tr>
                                <th style="width:120px;">Marca</th>
                                <th style="width:150px;">Modelo</th>
                                <th style="width:180px;">Serie</th>
                                <th style="width:120px;">Placas</th>
                                <th style="width:100px;">Color</th>
                                <th style="width:80px;">Año</th>
                                <th style="width:150px;">Combustible</th>
                                <th style="width:150px;">Transmisión</th>
                                <th style="width:120px;">Estatus</th>
                                <th style="width:200px;">Asignado a</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var v in Model)
                            {
                                var destino = v.Asignaciones.FirstOrDefault(a => a.FechaDevolucion == null)?.Personal?.Nombre ?? "—";
                                <tr>
                                    <td>@v.Marca</td>
                                    <td>@v.Modelo</td>
                                    <td>@v.NumeroSerie</td>
                                    <td>@v.Placas</td>
                                    <td>@v.Color</td>
                                    <td>@v.Anio</td>
                                    <td>@v.Combustible</td>
                                    <td>@v.Transmision</td>
                                    <td><span class="badge badge-info">@v.EstatusArticulo?.Nombre</span></td>
                                    <td>@destino</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer d-flex justify-content-between align-items-center">
                    @{
                        var previoDeshabilitado = !Model.TienePaginaAnterior ? "disabled" : "";
                        var siguienteDeshabilitado = !Model.TienePaginaSiguiente ? "disabled" : "";
                    }

                    <div class="btn-group" role="group">
                        <a asp-action="ConsultaVehiculos"
                           asp-route-numeroPagina="@(Model.IndicePagina - 1)"
                           asp-route-buscador="@ViewData["Buscador"]"
                           asp-route-tamanoPagina="@ViewData["TamanoPagina"]"
                           class="btn btn-secondary @previoDeshabilitado">
                            <i class="fas fa-chevron-left"></i> Previo
                        </a>

                        <a asp-action="ConsultaVehiculos"
                           asp-route-numeroPagina="@(Model.IndicePagina + 1)"
                           asp-route-buscador="@ViewData["Buscador"]"
                           asp-route-tamanoPagina="@ViewData["TamanoPagina"]"
                           class="btn btn-secondary @siguienteDeshabilitado">
                            Siguiente <i class="fas fa-chevron-right"></i>
                        </a>
                    </div>

                    <div class="text-muted">
                        Página <strong>@Model.IndicePagina</strong> de <strong>@Model.TotalPaginas</strong>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
